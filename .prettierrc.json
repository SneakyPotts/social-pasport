{
  "trailingComma": "all",
  "printWidth": 175,
  "semi": false,
  "singleQuote": true,
  "tabWidth": 2,
  "singleAttributePerLine": true,
  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "importOrder": [
    "<THIRD_PARTY_MODULES>",
    "^react/(.*)$",
    "^next/(.*)$",
    "^@assets/(.*)$",
    "^@helpers/(.*)$",
    "^@components/(.*)$",
    "^@UI/(.*)$",
    "^@hooks/(.*)$",
    "^[@/]",
    "^[./]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}
